<%if( product!== undefined &&  product!== null){ %>

    

            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title"> <%=product.title%> </h1>
                </header>
                <div class="card__image">
                    <img src="<%=product.imageUrl%>" alt="<%=product.title%>">
                </div>
                <div class="card__content">
                    <h2 class="product__price">  $<%= product.price %> </h2>
                    <p class="product__description"> <%= product.description %> </p>
                </div>
                <div class="card__actions">

                    <% if(mode==="admin"){ %>
                        <div style="display: flex; justify-content: center;align-items: center;">

                    <a class="btn" href="/admin/edit">Edit</a>
                    <form action="/admin/delete-product" method="POST">
                        <button class="btn" type="submit">Delete</button>
                    </form>
                    </div>
                    <% } else {%>
                        <div style="display: flex; justify-content: center;align-items: center;">
                    <% if(mode!=="detail"){ %>
                        <a class="btn" href="/shop/product-detail/<%= product.id %>">Details</a>
                    <% } %>
                    <% if(mode !== "cart"){ %>
                        <form action="/shop/cart" method="POST">
                            <input value="<%=product.id%>" type="hidden" name="productId" >
                          <button class="btn">Add to Cart</button>
                    </form>
                    <% } %>
                    <% if(mode === "cart"){ %>
                        <form action="/shop/cart/delete" method="POST">
                            <input value="<%=product.id%>" type="hidden" name="productId" >
                          <button class="btn">Remove Item</button>
                        </form>
                    <% } %>
                        </div>
                        <% }%>
                </div>
                    </article>
                    <% }%>